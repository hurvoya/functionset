def classify_touch(row):
    total = row['Nb of touch (total)']
    internal = row['Nb of touch (internal)']
    external = row['Nb of touch (external)']

    if total == 0:
        return "No Touch"
    elif internal > 0 and external == 0:
        return "Internal only"
    elif internal == 0 and external > 0:
        return "External only"
    elif internal > 0 and external > 0:
        return "Both"
    else:
        return "Unclassified"

df['Touch_Category'] = df.apply(classify_touch, axis=1)
