# On extrait les listes de SIREN sous forme de sets (plus rapide pour l'appartenance)
wholesale_sirens = set(df_wholesale["siren"].dropna().unique())
rtj_sirens       = set(df_rtj["siren"].dropna().unique())

# Cr√©ation des flags
df_tierre["flg_not_wholesale"] = (~df_tierre["SIREN"].isin(wholesale_sirens)).astype(int)
df_tierre["flg_not_rtj"]       = (~df_tierre["SIREN"].isin(rtj_sirens)).astype(int)
