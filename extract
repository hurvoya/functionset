# Liste des 7 colonnes de règles
rule_cols = [
    "flag_1_TER_6y",
    "flag_2_no_req_12m",
    "flag_3_ACC_6y",
    "flag_4_contentieux_arch_6y",
    "flg_is_not_ekip",
    "flg_not_rtj",
    "flg_not_wholesale"
]

# Flag final : 1 si toutes les règles = 1, sinon 0
tiers_flags["flag_final_eligible"] = tiers_flags[rule_cols].all(axis=1).astype(int)
