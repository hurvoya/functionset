import pandas as pd

# Exemple de DataFrame initial
data = {
    'HORUS Tab Technique': ['Table1', 'Table2', 'Table3'],
    'HORUS Champ Technique': ['Champ1', 'Champ2', 'Champ3'],
    'Non Fonctionnel DECA': ['NonFonction1', 'NonFonction2', 'NonFonction3'],
    'DASHBOARD': ['D1', 'D2', 'D1']
}
df = pd.DataFrame(data)

# Extraire les champs uniques
unique_fields = df[['HORUS Tab Technique', 'HORUS Champ Technique', 'Non Fonctionnel DECA']].drop_duplicates()

# Créer un DataFrame pivot avec les champs uniques
pivot_df = unique_fields.copy()

# Créer des colonnes pour chaque dashboard et remplir avec des indicateurs
for dashboard in df['DASHBOARD'].unique():
    pivot_df[dashboard] = pivot_df.apply(lambda row: 
        1 if any((df['HORUS Tab Technique'] == row['HORUS Tab Technique']) & (df['DASHBOARD'] == dashboard)) 
        else 0, axis=1)
