# Pivot : chaque colonne sera un pays
pivot = df.pivot_table(index='Code', 
                       columns='Country', 
                       values='Label', 
                       aggfunc='first')  # On prend un Label s'il y a plusieurs

# Renommer les colonnes pour plus de clart√©
pivot = pivot.rename(columns={
    'UK': 'Label_UK',
    'FR': 'Label_FR',
    'ES': 'Label_ES',
    'BE': 'Label_BE',
    'IT': 'Label_IT',
    'DE': 'Label_DE'
})
