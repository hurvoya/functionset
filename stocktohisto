NbContratsFiltres :=
CALCULATE(
    COUNTROWS(Contrats),
    TREATAS(VALUES(FiltresTous[Pays]), Contrats[Pays]),
    TREATAS(VALUES(FiltresTous[IBL]), Contrats[IBL]),
    TREATAS(VALUES(FiltresTous[TypeContrat]), Contrats[TypeContrat]),
    TREATAS(VALUES(FiltresTous[Canal]), Contrats[Canal]),
    TREATAS(VALUES(FiltresTous[Segment]), Contrats[Segment]),
    TREATAS(VALUES(FiltresTous[Date]), Contrats[Date]),
    ...
)
