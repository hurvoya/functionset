# --- Patch minimal : clé d'event globale ---
# A faire UNE seule fois après concat de Events et Stock

events = events.copy()
stock = stock.copy()

events["event_key"] = (
    events["country"].astype(str) + "|" +
    events["id_apporteur"].astype(str) + "|" +
    events["event_id"].astype(str)
)

stock["event_key"] = (
    stock["country"].astype(str) + "|" +
    stock["id_apporteur"].astype(str) + "|" +
    stock["event_id"].astype(str)
)
