fig, ax = plt.subplots(figsize=(12, 6))

for (country, year), g in df.groupby(["Country", "Year"]):
    g = g.sort_values("SeuilMontant")
    ax.plot(
        g["SeuilMontant"],
        g["CallsConservé"],
        marker="o",
        label=f"{country} - {year}"
    )

ax.set_xlabel("Seuil de montant financé (€)")
ax.set_ylabel("Nombre de calls conservés")
ax.set_title("Nombre de calls conservés selon le seuil de montant financé")
ax.grid(alpha=0.3)
ax.legend(title="Pays / Année")

plt.tight_layout()
plt.show()
