def to_datetime(df: pd.DataFrame, cols, normalize=True):
    for c in cols:
        if c in df.columns:
            df[c] = pd.to_datetime(df[c], errors="coerce", utc=False)
            # On enl√®ve l'heure pour stabiliser toutes les comparaisons
            if normalize:
                df[c] = df[c].dt.normalize()
    return df
