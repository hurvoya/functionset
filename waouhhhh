import matplotlib.pyplot as plt

df = impact_seuil.copy()

fig, ax = plt.subplots(figsize=(12, 6))

for country, g in df.groupby("country"):
    g = g.sort_values("threshold")
    ax.plot(
        g["threshold"],
        g["share_calls_kept"] * 100,
        marker="o",
        label=country
    )

ax.set_xlabel("Seuil de montant financé (€)")
ax.set_ylabel("% de calls conservés")
ax.set_title("Impact d’un seuil de montant financé sur la charge de calls")
ax.set_ylim(0, 100)
ax.grid(alpha=0.3)
ax.legend(title="Pays")

plt.tight_layout()
plt.show()
