kpi_amount = (
    stock_no_ka
    .assign(
        year_month=stock_no_ka["mois_ref"].dt.to_period("M").astype(str)
    )
    .groupby(["country", "year_month"])
    .agg(
        montant_finance=("montant_finance_mois", "sum"),
        montant_finance_cum=("montant_finance_cum", "sum")
    )
    .reset_index()
)
