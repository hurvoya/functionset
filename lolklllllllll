def build_quarter_snapshots(start_year: int = 2024, end_year: int = 2025):
    snapshots = []
    for y in range(start_year, end_year + 1):
        snapshots += [
            pd.Timestamp(f"{y}-03-31"),
            pd.Timestamp(f"{y}-06-30"),
            pd.Timestamp(f"{y}-09-30"),
            pd.Timestamp(f"{y}-12-31"),
        ]
    return snapshots

snapshots = build_quarter_snapshots(2024, 2025)
print(snapshots)
