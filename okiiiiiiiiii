# Labels internes pour chaque segment (First / Known)
for bx, btm, v in zip(offsets, bottom - vals, vals):
    if v > 0:
        ax.text(
            bx,
            btm + v / 2,
            f"{int(v)}",
            ha="center",
            va="center",
            fontsize=8,
            color="white",
            fontweight="bold",
        )

