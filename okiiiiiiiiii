kpi_bloc6_delay_global = (
    agg_delay
    .groupby(["year", "country"], as_index=False)
    .agg(
        mean_delay_days=("delay_days", "mean"),
        median_delay_days=("delay_days", "median"),
        nb_dealers_8=("id_apporteur", "nunique"),
    )
)

kpi_bloc6_delay_global["mean_delay_days"] = kpi_bloc6_delay_global["mean_delay_days"].round(1)
kpi_bloc6_delay_global["median_delay_days"] = kpi_bloc6_delay_global["median_delay_days"].round(1)
