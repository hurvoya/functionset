ddef build_follow_v2(stock):
    follow = (stock.groupby(["id_apporteur", "event_id"], as_index=False)
                     .agg(
                         nb_calls_total=("nb_calls", "sum"),
                         nb_contrats_total=("nb_contrats_eligibles", "sum")
                     ))

    follow["sorti_suivi"] = (follow["nb_contrats_total"] >= 8)
    follow["en_suivi"] = ~follow["sorti_suivi"]

    return follow
