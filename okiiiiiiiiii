import matplotlib.pyplot as plt

def plot_pct_calls_conserves(impact_df, ibl_scope="ELS"):
    df = impact_df[impact_df["ibl"] == ibl_scope].copy()
    if df.empty:
        print(f"Aucune donnée pour IBL = {ibl_scope}")
        return

    fig, ax = plt.subplots(figsize=(8,6))

    for year in sorted(df["year"].unique()):
        sub = df[df["year"] == year].sort_values("seuil_montant")
        x = sub["seuil_montant"]
        y = sub["pct_calls_conserves"] * 100

        ax.plot(x, y, marker="o", label=str(year))

        # labels sur les points
        for xi, yi in zip(x, y):
            ax.text(xi, yi + 1, f"{yi:.1f}%", ha="center", va="bottom", fontsize=8)

    ax.set_xlabel("Seuil montant (EUR)")
    ax.set_ylabel("% de calls conservés")
    ax.set_title(f"Impact seuil – % de calls conservés – IBL = {ibl_scope}")
    ax.grid(True, linestyle="--", alpha=0.3)
    ax.legend(title="Année")

    plt.tight_layout()
    plt.show()
